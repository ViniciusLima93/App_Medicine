<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ThirdFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Dados Informados"
        android:textAlignment="center"
        android:textSize="18sp"
        />


    <TextView
        android:id="@+id/medicine_ViewFromFirebase"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="medicineFromDatabase"
        android:layout_marginTop="40sp"
        android:textAlignment="textStart"
        android:layout_marginLeft="20sp"
        />

    <TextView
        android:id="@+id/comments_ViewFromFirebase"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="commentsFromDatabase"
        android:layout_marginTop="40sp"
        android:textAlignment="textEnd"
        android:layout_marginRight="20sp"

        />

    <TextView
        android:id="@+id/pain_ViewFromFirebase"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="symptonsFromDatabase"
        android:layout_marginTop="40sp"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="130sp"
        android:textAlignment="textStart"

        />





